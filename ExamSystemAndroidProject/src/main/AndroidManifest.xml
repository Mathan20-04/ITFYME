<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itfyme.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".controller.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerce"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.SearchActivity"
            android:label="Search Items"></activity>
        <activity
            android:name=".activity.TrackOrderActivity"
            android:label="Track Order" />
        <activity
            android:name=".activity.MyOrderActivity"
            android:label="My Order" />
        <activity
            android:name=".activity.PaymentActivity"
            android:label="Payment" />
        <activity
            android:name=".activity.MyCartActivity"
            android:label="My Cart"></activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="Login"></activity>
        <activity
            android:name=".activity.ProductDetailActivity"
            android:label="Product Detail" />
        <activity
            android:name=".activity.ProductListActivity"
            android:label="Product List" />
        <activity
            android:name=".activity.SubCategoryActivity"
            android:label="SubCategory"></activity>
        <activity
            android:name=".activity.LandingPageActivity"
            android:label="Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>